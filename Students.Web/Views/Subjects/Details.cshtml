@model Subject
@using Students.Interfaces
@using System.Globalization


@inject ISharedResourcesService sharedResourcesService

@{
    CultureInfo cultureInfo = CultureInfo.GetCultureInfo(Context.Session.GetString("Culture") ?? "en-US");

    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Subject</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @sharedResourcesService.GetString("Name", cultureInfo)
            @* @Html.DisplayNameFor(model => model.Name) *@
        </dt>
        <dd class = "col-sm-10">
            @sharedResourcesService.GetString("Name", cultureInfo)
            @* @Html.DisplayFor(model => model.Name) *@
        </dd>
        <dt class = "col-sm-2">
            @sharedResourcesService.GetString("Credits", cultureInfo)
            @* @Html.DisplayNameFor(model => model.Credits) *@
        </dt>
        <dd class = "col-sm-10">
            @sharedResourcesService.GetString("Credits", cultureInfo)

            @* @Html.DisplayFor(model => model.Credits) *@
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">@sharedResourcesService.GetString("Edit", cultureInfo)</a> |
    <a asp-action="Index">@sharedResourcesService.GetString("BackToList", cultureInfo)</a>
</div>
