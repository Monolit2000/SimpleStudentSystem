@using Students.Interfaces
@using System.Globalization
@model Student

@inject ISharedResourcesService sharedResourcesService

@{
    CultureInfo cultureInfo = CultureInfo.GetCultureInfo(Context.Session.GetString("Culture") ?? "en-US");
    ViewData["Title"] = "Delete";
}

<h1>@sharedResourcesService.GetString("Delete", cultureInfo)</h1>

<h3>@sharedResourcesService.GetString("Are you sure you want to delete this?", cultureInfo)</h3>
<div>
    <h4>@sharedResourcesService.GetString("Student", cultureInfo)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @sharedResourcesService.GetString("Name", cultureInfo)
            @* @Html.DisplayNameFor(model => model.Name) *@
        </dt>
        <dd class = "col-sm-10">
            @sharedResourcesService.GetString("Name", cultureInfo)
            @* @Html.DisplayFor(model => model.Name) *@
        </dd>
        <dt class = "col-sm-2">
            @sharedResourcesService.GetString("Age", cultureInfo)
           @*  @Html.DisplayNameFor(model => model.Age) *@
        </dt>
        <dd class = "col-sm-10">
            @sharedResourcesService.GetString("Age", cultureInfo)
            @* @Html.DisplayFor(model => model.Age) *@
        </dd>
        <dt class = "col-sm-2">
            @sharedResourcesService.GetString("Major", cultureInfo)
            @* @Html.DisplayNameFor(model => model.Major) *@
        </dt>
        <dd class = "col-sm-10">
            @sharedResourcesService.GetString("Major", cultureInfo)
            @* @Html.DisplayFor(model => model.Major) *@
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index"> @sharedResourcesService.GetString("BackToList", cultureInfo)</a>
    </form>
</div>
